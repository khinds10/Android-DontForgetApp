<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/custom_border"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@drawable/background_div" >

        <TextView
            android:id="@+id/popupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:padding="5dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:text="Don&apos;t Forget! Message"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight=".4"
            android:background="@drawable/custom_button"
            android:padding="2dp"
            android:text="Cancel" >
        </Button>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/messageFormContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Title"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:paddingTop="10dp"
                android:textSize="22dp"
                android:textStyle="bold" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/readOnlyTitletextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Item Title"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/messageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Message"
                android:textColor="#000000"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/messageContent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:ems="10"
                android:minLines="3" >
            </EditText>

            <TextView
                android:id="@+id/readOnlyMessagetextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Item Message"
                android:textColor="#000000"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/editButtonContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/editMemoButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/custom_button"
                    android:padding="10dp"
                    android:text="Edit" />

                <Button
                    android:id="@+id/cancelEditMemoButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/custom_button"
                    android:padding="10dp"
                    android:text="Cancel Edit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reminderReminder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp" >

                    <ImageView
                        android:id="@+id/reminderImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="4dp"
                        android:src="@drawable/reminder_icon" />

                    <TextView
                        android:id="@+id/reminderReminderInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="10dp"
                        android:textColor="#0000FF" />
                </LinearLayout>

                <Button
                    android:id="@+id/cancelReminderButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Cancel Reminder" />
            </LinearLayout>

            <TextView
                android:id="@+id/processMessageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Process Message"
                android:textColor="#999999" />

            <LinearLayout
                android:id="@+id/saveButtonsContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/SaveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button"
                    android:drawableLeft="@drawable/save"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="35dp"
                    android:minWidth="90dp"
                    android:text="Save"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ArchiveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button"
                    android:drawableLeft="@drawable/archive"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="35dp"
                    android:minWidth="90dp"
                    android:text="Archive"
                    android:textColor="#000000"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/textButtonsContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/RemindButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button"
                    android:drawableLeft="@drawable/remind"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="35dp"
                    android:text="Remind Me"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/DeleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button"
                    android:drawableLeft="@drawable/delete"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="35dp"
                    android:minWidth="90dp"
                    android:text="Delete"
                    android:textColor="#000000"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/quickEmailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Quickly Email"
                android:textColor="#999999" />

            <LinearLayout
                android:id="@+id/emailButtonsContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/sendEmailButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button"
                    android:drawableLeft="@drawable/send"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="35dp"
                    android:minWidth="200dp"
                    android:text="Yourself"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/sendContactEmailButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button"
                    android:drawableLeft="@drawable/send"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="35dp"
                    android:minWidth="200dp"
                    android:text="Contact"
                    android:textColor="#000000"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/quickTextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Quickly Text"
                android:textColor="#999999" />

            <LinearLayout
                android:id="@+id/textButtonsContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/sendSMSButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button"
                    android:drawableLeft="@drawable/send"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="35dp"
                    android:minWidth="200dp"
                    android:text="Yourself"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/sendContactSMSButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button"
                    android:drawableLeft="@drawable/send"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:minHeight="35dp"
                    android:minWidth="200dp"
                    android:text="Contact"
                    android:textColor="#000000"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>