<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/popup_border"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:id="@+id/titleContainer"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_margin="12dp"
        android:background="@drawable/popup_title_background" >

        <TextView
            android:id="@+id/popupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:padding="5dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:text="LCARS ACCESS"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight=".2"
            android:background="@drawable/custom_button_yellow"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            android:text="CLOSE"
            android:textColor="#000000"
            android:textSize="14sp" >
        </TextView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/popupScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/messageFormContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingTop="0dp" >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="DIRECTIVE"
                android:textColor="#999999" />

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="3"
                android:paddingTop="10dp"
                android:textSize="22sp"
                android:textStyle="bold" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/readOnlyTitletextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/messageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="DETAILS"
                android:textColor="#999999" />

            <EditText
                android:id="@+id/messageContent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minLines="3" >
            </EditText>

            <TextView
                android:id="@+id/readOnlyMessagetextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/editButtonContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/placeholderTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/editMemoButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/custom_button_yellow"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:text="EDIT"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/cancelEditMemoButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/custom_button_yellow"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:text="CANCEL"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reminderReminder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp" >

                    <ImageView
                        android:id="@+id/reminderImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:gravity="right|center_vertical"
                        android:paddingRight="4dp"
                        android:src="@drawable/reminder_icon" />

                    <TextView
                        android:id="@+id/reminderReminderInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:paddingTop="10dp"
                        android:textColor="#0000FF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/cancelReminderButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/Cancel_Reminder" />
            </LinearLayout>

            <TextView
                android:id="@+id/processMessageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="SYSTEM ENTRY"
                android:textColor="#999999" />

            <LinearLayout
                android:id="@+id/saveButtonsContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/SaveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button_blue"
                    android:drawablePadding="5dp"
                    android:gravity="right|center_vertical"
                    android:maxWidth="90dp"
                    android:minHeight="35dp"
                    android:minWidth="90dp"
                    android:paddingRight="18dp"
                    android:text="SAVE"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ArchiveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button_blue"
                    android:drawablePadding="5dp"
                    android:gravity="right|center_vertical"
                    android:maxWidth="90dp"
                    android:minHeight="35dp"
                    android:minWidth="90dp"
                    android:paddingRight="18dp"
                    android:text="ARCHIVE"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/textButtonsContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/RemindButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button_blue"
                    android:drawablePadding="5dp"
                    android:gravity="right|center_vertical"
                    android:maxWidth="90dp"
                    android:minHeight="35dp"
                    android:minWidth="90dp"
                    android:paddingRight="18dp"
                    android:text="REMIND"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/DeleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button_blue"
                    android:drawablePadding="5dp"
                    android:gravity="right|center_vertical"
                    android:maxWidth="90dp"
                    android:minHeight="35dp"
                    android:minWidth="90dp"
                    android:paddingRight="18dp"
                    android:text="DELETE"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/quickEmailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="EMAIL PROTOCOL"
                android:textColor="#999999" />

            <LinearLayout
                android:id="@+id/emailButtonsContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/sendEmailButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button_purple"
                    android:drawablePadding="5dp"
                    android:gravity="right|center_vertical"
                    android:minHeight="35dp"
                    android:minWidth="200dp"
                    android:paddingRight="15dp"
                    android:text="YOURSELF"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sendContactEmailButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button_purple"
                    android:drawablePadding="5dp"
                    android:gravity="right|center_vertical"
                    android:minHeight="35dp"
                    android:minWidth="200dp"
                    android:paddingRight="15dp"
                    android:text="STARFLEET"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/quickTextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="SMS PROTOCOL"
                android:textColor="#999999" />

            <LinearLayout
                android:id="@+id/sendSMSButtonsContainer2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/sendSMSButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button"
                    android:drawablePadding="5dp"
                    android:gravity="right|center_vertical"
                    android:minHeight="35dp"
                    android:minWidth="200dp"
                    android:paddingRight="15dp"
                    android:text="YOURSELF"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sendContactSMSButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/custom_button"
                    android:drawablePadding="5dp"
                    android:gravity="right|center_vertical"
                    android:minHeight="35dp"
                    android:minWidth="200dp"
                    android:paddingRight="15dp"
                    android:text="STARFLEET"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>